<div id='answer'>
  <h2><%= @answer.title %></h2>
  <span id='author'>Created by <%= @answer.user.email %></span>
  <%= link_to "Edit Answer", [:edit, @question, @answer] %>
  <%= link_to "Delete Answer", [@question, @answer], :method => :delete,
       :confirm => "Are you sure you want to delete this answer?" %>
  <%= simple_format(@answer.response) %>
</div>
